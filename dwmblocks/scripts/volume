#!/bin/bash 

volume=$(pamixer --get-volume)
is_muted=$(pamixer --get-mute)

if [ "$is_muted" = "true" ]; then
    echo "ğŸ”‡ Muted(${volume}%)"
elif [ "$volume" -ge 0 ] && [ "$volume" -lt 35 ]; then
  echo "ğŸ”ˆ ${volume}%"
elif [ "$volume" -ge 35 ] && [ "$volume" -lt 65 ]; then
  echo "ğŸ”‰ ${volume}%"
else
  echo "ğŸ”Š ${volume}%"
fi
echo "â‰ï¸ error"
